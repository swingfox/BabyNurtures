

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:background="@mipmap/bgs"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="348dp"
            android:layout_height="160dp"
            android:id="@+id/header"
            android:src="@drawable/header"
            android:scaleType="fitCenter"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#99defb"
        android:orientation="horizontal"
        android:weightSum="100">

        <!--<Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:id="@+id/btnMenu"
            android:padding="20dp"
            android:background="@drawable/qw"
            android:scaleType="fitXY"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menu"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="95"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Menu"
            />-->

        <ImageView
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingLeft="580px"
            android:paddingTop="20px"
            android:paddingBottom="10px"
            android:id="@+id/message"
            android:src="@drawable/mess"
            android:layout_weight="9.09" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="100">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:id="@+id/Profile"
            android:src="@drawable/profile"
            android:layout_weight="50"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:clickable="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:id="@+id/Notification"
            android:src="@drawable/notification"
            android:layout_weight="50"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:clickable="true" />

        <!---->

    </LinearLayout>


    <LinearLayout
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_weight="50"
            android:id="@+id/Todolist"
            android:src="@drawable/c"
            android:scaleType="fitXY"
            android:clickable="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:id="@+id/btnMenu"
            android:layout_weight="50"
            android:src="@drawable/menumenu"
            android:scaleType="fitXY"
            android:clickable="true" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:text=" (c) 2015 - 2016 All Rights Reserved. v.1.1.2"
        android:textColor="#000000" />



</LinearLayout>


